<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="ymcompany"
            android:textColor="#CAC8C8"
            android:gravity="right"
            android:layout_marginRight="350dp"
            android:textSize="15dp"/>

        <View
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E8E8E8"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="서비스 영역"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_home_main_background"

                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1.2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:layout_marginRight="-25dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/company_img1"
                        android:scaleType="fitXY"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:textColor="#FFFFFF"
                    android:text="모바일 앱 개발\n\nAndroid, IOS 동시\n개발을 진행하여\n고객의 개발 비용을\n절감합니다"
                    android:gravity="center"
                    android:background="@drawable/company_edge_round1"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_home_main_background"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">



                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:textColor="#FFFFFF"
                    android:text="웹 서비스 개발\n\n웹 기반 서비스에서\n기업 소개 웹사이트까지\n원하는 어떤 형태의\n웹사이트도 개발할 수 \n있습니다"
                    android:gravity="center"
                    android:background="@drawable/company_edge_round2"/>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-30dp"
                    android:layout_marginLeft="-25dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/company_img2"
                        android:scaleType="fitXY"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_home_main_background"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-25dp"
                    android:layout_marginRight="-25dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/company_img3" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:textColor="#FFFFFF"
                    android:text="UX/UI 디자인\n\n브랜드 가치를 높일 수\n있는 모던 UI/UX를\n디자인해 드립니다"
                    android:gravity="center"
                    android:background="@drawable/company_edge_round3"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">



                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:textColor="@color/common_min"
                    android:layout_marginRight="-100dp"
                    android:paddingRight="30dp"
                    android:text="서비스 상세 기획\n\n아이디어는 있는데\n구체적인 모습이\n그려지지 않으시나요?\n고객이 놓친 부분까지\n구상중인 서비스의\n구체적인 형태를\n만들어드립니다"
                    android:gravity="center"
                    android:background="@drawable/company_edge_round4"/>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-30dp"
                    android:layout_marginLeft="70dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/company_img4" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/company_quote"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="283dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="다양한 프로젝트 경험을 통해 검증된 프로세스로\n고객의 상상을 현실로 만들어드립니다"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/company_quote2"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="프로세스"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/company_img_bottom1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="1.컨설팅"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="구상 중인 앱, 웹\n서비스 제작 진행을 위해\n무엇이 필요한지 무료로\n안내해 드립니다"/>

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/company_img_bottom_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginRight="5dp"
                android:layout_height="50dp"
                android:src="@drawable/company_img_bottom2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="2.기획"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="서비스에 구체적인 형태가\n준비되지 않으셨거나,\n부족한 점이 있으면\n기획을 통해 보충합니다"/>

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/company_img_bottom_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/company_img_bottom3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="3.디자인, 개발"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="다양한 모바일, 웹 서비스를\n개발해온 디자이너, 개발자가\n귀사의 서비스를\n제작합니다"/>

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/company_img_bottom_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginRight="5dp"
                android:layout_height="50dp"
                android:src="@drawable/company_img_bottom4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="4.운영, 유지보수"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="고객사 니즈에 맞는\n서버 운영을 통해\n높은 트래픽에도\n안정적인 서비스를\n운영합니다"/>


        </LinearLayout>



        </LinearLayout>


</ScrollView>