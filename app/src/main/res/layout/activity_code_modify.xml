<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".salary.BonusActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="코드수정화면"
            android:textSize="22dp"
            android:background="@drawable/round_title"
            android:textColor="@color/white"
            />


        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rond_txt"
                    android:gravity="center"
                    android:text="코드유형"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/code_modify_title"
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#4C4B4B"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rond_txt"
                    android:gravity="center"
                    android:text="코드번호"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/code_modify_value"
                    android:text=""
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#4C4B4B"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rond_txt"
                    android:gravity="center"
                    android:text="승인여부"
                    android:textSize="18dp"/>
                <EditText
                    android:id="@+id/code_modify_used"
                    android:text=""
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rond_txt"
                    android:gravity="center"
                    android:text="코드구분"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/code_modify_name"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rond_txt"
                    android:gravity="center"
                    android:text="코드생성자"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/code_modify_maker"
                    android:text=""
                    android:layout_width="300dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#4C4B4B"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_modify_save"
                        android:text="수정하기"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        />

                    <Button
                        android:id="@+id/btn_modify_cancel"
                        android:text="취소"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/common_min"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



