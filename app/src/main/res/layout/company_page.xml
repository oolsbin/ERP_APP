<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <TextView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="ymcompany"
        android:textColor="#CAC8C8"
        android:gravity="right"
        android:layout_marginRight="300dp"
        android:textSize="15dp"/>

    <View
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E8E8E8"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="서비스 영역"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#3B5F77"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3FBFB"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_home_main_background"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_weight="1.2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-30dp"
            android:layout_marginRight="-25dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/company_img1"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:textColor="@color/black"
            android:text="모바일 앱 개발\n\nAndroid, IOS 동시\n개발을 진행하여\n고객의 개발 비용을\n절감합니다"
            android:gravity="center"
            android:background="@drawable/company_edge_round1"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_home_main_background"
        android:layout_margin="10dp"
        android:orientation="horizontal">



        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:textColor="@color/black"
            android:text="웹 서비스 개발\n\n웹 기반 서비스에서\n기업 소개 웹사이트까지\n원하는 어떤 형태의\n웹사이트도 개발할 수 \n있습니다"
            android:gravity="center"
            android:background="@drawable/company_edge_round2"/>

        <androidx.cardview.widget.CardView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-25dp"
            android:layout_marginLeft="-25dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/company_img2"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_home_main_background"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-25dp"
            android:layout_marginRight="-25dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/company_img3" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:textColor="@color/black"
            android:text="UX/UI 디자인\n\n브랜드 가치를 높일 수\n있는 모던 UI/UX를\n디자인해 드립니다"
            android:gravity="center"
            android:background="@drawable/company_edge_round3"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">



        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:textColor="@color/black"
            android:layout_marginRight="-20dp"
            android:text="서비스 상세 기획\n\n아이디어는 있는데\n구체적인 모습이\n그려지지 않으시나요?\n고객이 놓친 부분까지 찾아\n구상중인 서비스의\n구체적인 형태를\n만들어드립니다"
            android:gravity="center"
            android:background="@drawable/company_edge_round4"/>

        <androidx.cardview.widget.CardView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-25dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/company_img4"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/company_quote"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"/>


    <TextView
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="다양한 프로젝트 경험을 통해 검증된 프로세스로\n고객의 상상을 현실로 만들어드립니다"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/company_quote"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"/>


    </LinearLayout>

    </LinearLayout>

</ScrollView>