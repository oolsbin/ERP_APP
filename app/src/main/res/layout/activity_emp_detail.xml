<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emp.EmpDetailActivity"
    android:background="@drawable/app_background"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/round_title"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="24dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="개인정보수정"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="사번"
            android:textSize="20dp"
            android:background="@drawable/rond_txt"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_employee_id_detail"
            android:text="20221015"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="이름"
            android:textSize="20dp"
            android:background="@drawable/rond_txt"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_employee_name_detail"
            android:text="최인혁"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="부서"
            android:textSize="20dp"
            android:background="@drawable/rond_txt"
            android:textColor="@color/black"/>

        <!--<Spinner
            android:layout_marginRight="60dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/spinner_emp_department"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/linear_Empsearch_department"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <AutoCompleteTextView
                android:id="@+id/spinner_emp_department"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:inputType="none"
                android:textSize="15dp"
                android:text="부서선택" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="회사"
            android:textSize="20dp"
            android:background="@drawable/rond_txt"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/linear_Empsearch_company"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <AutoCompleteTextView
                android:id="@+id/spinner_emp_company"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:inputType="none"
                android:textSize="15dp"
                android:text="회사선택" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="직급"
            android:textSize="20dp"
            android:background="@drawable/rond_txt"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/linear_Empsearch_rank"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <AutoCompleteTextView
                android:id="@+id/spinner_emp_position"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:inputType="none"
                android:textSize="15dp"
                android:text="직급선택" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--<Spinner
            android:layout_marginRight="60dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/spinner_emp_position"
            android:layout_width="200dp"
            android:layout_height="40dp"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="직종"
            android:textSize="20dp"
            android:background="@drawable/rond_txt"
            android:textColor="@color/black"/>

        <RadioGroup
            android:id="@+id/rdg_emp_pattern"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/emp_pattern_H101"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="정규직"/>

            <RadioButton
                android:id="@+id/emp_pattern_H102"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="계약직"/>


        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rond_txt"
            android:gravity="center"
            android:text="관리자"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <RadioGroup
            android:id="@+id/rdg_emp_admin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/emp_admin_Y"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="관리자" />

            <RadioButton
                android:id="@+id/emp_admin_N"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="일반" />


        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_emp_modify"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="수정완료"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:backgroundTint="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btn_emp_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="정보삭제"
            android:backgroundTint="#DC3030"/>
        <Button
            android:id="@+id/btn_emp_close"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text="닫기"
            android:textSize="16dp"
            android:backgroundTint="@color/common_min"/>


    </LinearLayout>


</LinearLayout>