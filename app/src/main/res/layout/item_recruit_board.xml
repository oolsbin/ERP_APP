<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_apply"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true"
        >


        <LinearLayout
            android:background="@drawable/border_apply_middle"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rec_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(주)이지피엔피"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/tv_rec_title"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[주식회사이지피엔피] jsp &amp; JAVA"
                android:textColor="@color/black"
                android:maxLength="25"
                android:textSize="18dp"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rec_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신입"/>
                <View
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울 서초구"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rec_employee_pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정규직"/>
                <View
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view"/>
                <TextView
                    android:id="@+id/tv_rec_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[연봉]2800만원"/>
                <View
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주 5일 근무"/>

            </LinearLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>