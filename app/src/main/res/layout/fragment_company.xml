<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222E3C"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:id="@+id/company_logo"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:layout_toEndOf="@+id/top1"
                android:src="@drawable/ic_launcher_foreground" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_circle" />


        </RelativeLayout>

        <!--움짤을 넣으면 좋을 것 같음-->
        <ImageView
            android:id="@+id/company_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/top_nav"
            android:scaleType="fitXY"
            android:src="@drawable/company_img" />

        <LinearLayout
            android:id="@+id/company_intro"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@+id/company_img"
            android:background="#222E3C"
            android:orientation="vertical">


        </LinearLayout>


        <LinearLayout
            android:layout_below="@id/company_intro"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222E3C"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_height="2dp"
                android:background="#ACACAC"
                />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:text="한울직업전문회사" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:text="010-1234-5678" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>